@page "/cv/jobs/{id}"
@using ItMe.Utils
@model ItMe.Pages.EditJobModel
@inject AuthManager AuthManager

@{
    ViewData["Title"] = "EditJob";
}

<h2>EditJob</h2>

<form method="POST" class="full-width" style="width: 500px;">
    <labeled-control>
        <lc-label>Company</lc-label>
        <lc-control><input type="text" asp-for="Company" /></lc-control>
    </labeled-control>

    <div class="section">
        <div class="title">Roles</div>
        
        @foreach (var role in Model.Roles)
        {
            <div class="section-item">
                <div style="float: right;">
                    <a href="/cv/jobs/@Model.Id/roles/@role.Id"><i class="fas fa-edit"></i></a>
                </div>
                <div>
                    @role.Title
                </div>
            </div>
        }

        <div class="card-container">
            @if (AuthManager.IsLoggedIn)
            {
                <a href="/cv/jobs/@Model.Id/roles" class="card add">
                    <i class="fas fa-plus"></i>
                </a>
            }
        </div>    
    </div>
    
    <div class="button-bar">
        <button type="submit">Save</button>
    </div>
</form>